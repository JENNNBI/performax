rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ---------------------------------------------------------
    // 1. User Documents (Profil ve Array bazlı favoriler)
    // ---------------------------------------------------------
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /test_results/{testResultId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ---------------------------------------------------------
    // 2. FAVORITES COLLECTION (ACTIVE - Used by FavoritesService)
    // Bu koleksiyon FavoritesService tarafından kullanılıyor.
    // Giriş yapmış herhangi bir kullanıcı kendi favorilerini ekleyebilir.
    // ---------------------------------------------------------
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null;
    }
    
    // ---------------------------------------------------------
    // 3. FAVORITE QUESTIONS (Legacy - Preserved)
    // Eski koleksiyon, korunuyor. Giriş yapmış kullanıcılar yazabilir.
    // ---------------------------------------------------------
    match /favorite_questions/{questionId} {
      allow read, write: if request.auth != null;
    }
    
    // ---------------------------------------------------------
    // 4. Diğer Favori Koleksiyonlar
    // ---------------------------------------------------------
    match /favorite_books/{bookId} {
      allow read, write: if request.auth != null;
    }
    
    match /favorite_playlists/{playlistId} {
      allow read, write: if request.auth != null;
    }
    
    // ---------------------------------------------------------
    // 5. Genel İçerik ve Progress
    // ---------------------------------------------------------
    match /user_progress/{progressId} {
      allow read, write: if request.auth != null;
    }
    
    match /content/{document=**} {
      allow read: if request.auth != null;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}