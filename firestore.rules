rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read/write their own user document
    // This includes favorites stored as arrays: favoriteQuestions, favoriteBooks, favoritePlaylists
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read/write their own test results (subcollection)
      match /test_results/{testResultId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // DEPRECATED: Old favorite collections - kept for migration purposes only
    // These collections are being decommissioned. Favorites are now stored as arrays
    // in the user document (favoriteQuestions, favoriteBooks, favoritePlaylists).
    // These rules are kept temporarily to allow migration scripts to access old data.
    
    // Old favorite_questions collection (DEPRECATED)
    match /favorite_questions/{questionId} {
      allow read: if request.auth != null && 
                     (!resource.exists || resource.data.userId == request.auth.uid);
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Old favorite_books collection (DEPRECATED)
    match /favorite_books/{bookId} {
      allow read: if request.auth != null && 
                     (!resource.exists || resource.data.userId == request.auth.uid);
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Old favorite_playlists collection (DEPRECATED)
    match /favorite_playlists/{playlistId} {
      allow read: if request.auth != null && 
                     (!resource.exists || resource.data.userId == request.auth.uid);
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Allow users to read/write their own progress data
    match /user_progress/{progressId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read public content
    match /content/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
